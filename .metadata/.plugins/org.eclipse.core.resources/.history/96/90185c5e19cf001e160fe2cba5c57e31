	<property name="connection.url">jdbc:mysql://localhost:3306/hibernate</property>
	<property name="connection.username">root</property>
	<property name="connection.password">dip piyu</property>


	<!-- to define the language of database -->
	<property name="dialect">org.hibernate.dialect.MySQLDialect</property>

	<!-- it is use for automatic create the table -->
	<!-- update means - if table is present then just update it create means 
		- every time create new table -->
	<property name="hbm2ddl.auto">update</property>
	<property name="show_sql">true</property>

</session-factory>
</hibernate-configuration>